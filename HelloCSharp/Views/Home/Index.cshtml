@using HelloCSharp.Database
@{
    ViewBag.Persons = Database.GetInstance().PersonRepository.FindAll();
    ViewBag.Cities = Database.GetInstance().CityRepository.FindAll();
}

<h2><a href="/Home/Person">Personen</a></h2>

<ul>
    @foreach(var person in @ViewBag.Persons) {
        <li><a href="/Home/Person/@person.Id">@person.Name</a></li>
    }
</ul>

<h2><a href="/Home/City">St&auml;dte</a></h2>

<ul>
    @foreach(var city in @ViewBag.Cities) {
        <li><a href="/Home/City/@city.Id">@city.Name</a></li>
    }
</ul>